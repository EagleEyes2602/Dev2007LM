@model IEnumerable<Net2006MVC.Models.EF.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<button onclick="CallBack(1);">ClickMe Plzzz!!!</button>
<p>Total Record: <span id="total-record">0</span></p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @item.FirstName<span>&nbsp;</span>@item.LastName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @{
                    if (item.Gender == 1)
                    {
                        <span>Nam</span>
                    }
                    else
                    {
                        <span>Nữ</span>
                    }
                }
            </td>
            <td>
                @if (item.DOB != null)
                {
                    <span>@item.DOB.Value.ToString("dd/MM/yyyy")</span>
                }
            </td>
            <td>
                @{
                    if (item.Status == 1)
                    {
                        <span>Hoạt động</span>
                    }
                    else
                    {
                        <span>Không hoạt động</span>
                    }
                }
            </td>
            <td>
                <a data-toggle="modal" data-target="#myModal">ChangePassword</a> |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.Action("ChangePassword", "Employees")

<script>
    function CallBack(record) {
        $.ajax({
            url: '/Home/TestAjax',
            type: 'POST',
            //dataType: 'json',
            data: { recordNumber: record },
          })
            .done(function (res) {
                $('#total-record').text(res.empLst.length);
            console.log("success");
          })
        .fail(function (res) {
            console.log(res);
            console.log("error");
          })
          .always(function() {
            console.log("complete");
        });
    }
</script>