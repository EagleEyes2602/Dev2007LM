@model Net2006MVC.Models.EF.BookTitle
@{
    Layout = null;
}
<div class="product-item">
    <div class="pi-pic">
        <img src="~/Content/Uploads/@Model.Image" alt="@Model.Name">
        <div class="pi-links">
            <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
            <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
        </div>
    </div>
    <div class="pi-text">
        <h6>@Model.Price</h6>
        <p>@Model.Name</p>
    </div>
</div>